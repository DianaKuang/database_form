<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection - assignment 3</title>
  <link rel="stylesheet" href="/css/main.css">
</head>

<body tabindex="-1">
    <%- include('partials/navbar', {page: '' }) %>
  
  <br>

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set: <%= set.name %></h1>

          <p class="py-6">Use the below form to update <%= set.name %> info</p>

        </div>
      </div>
    </div>

    <br />

    <form action="/lego/editSet" method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
          <div>
            <div class="mb-6">
              <label for="name" class="block text-gray-700 font-medium">Name</label>
              <input type="text" id="name" name="name" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" value="<%= set.name %>">
            </div>
            <div class="mb-6">
              <label for="phone" class="block text-gray-700 font-medium">Phone</label>
              <input type="text" id="phone" name="phone" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" value="<%= set.phone %>">
            </div>
          </div>
          <div>
            <div class="mb-6">
              <label for="allergies" class="block text-gray-700 font-medium">Allergies</label>
              <input type="text" id="allergies" name="allergies" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" value="<%= set.allergies %>">
            </div>
            <div class="mb-6">
              <label for="ad_info" class="block text-gray-700 font-medium">Additional Information</label>
              <input type="text" id="ad_info" name="ad_info" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" value="<%= set.ad_info %>">
            </div>
          </div>
          <div>
            <div class="mb-6">
              <label for="theme_id" class="block text-gray-700 font-medium">Payment Type</label>
              <select id="theme_id" name="theme_id" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                <% themes.forEach(theme => { %>
                <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-6">
              <label for="set_num" class="block text-gray-700 font-medium">User ID</label>
              <input type="text" id="set_num" name="set_num" readonly class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 cursor-not-allowed" value="<%= set.set_num %>">
            </div>
          </div>
          <div class="mb-6">
            <label for="paid" class="block text-gray-700 font-medium">Completed Payment</label>
            <div>
              <label for="paid_yes" class="mr-4">
                <input type="radio" id="paid_yes" name="paid" value="yes" class="mr-2" <%= set.paid === true ? 'checked' : '' %>> Yes
              </label>
              <label for="paid_no">
                <input type="radio" id="paid_no" name="paid" value="no" class="mr-2" <%= set.paid === false ? 'checked' : '' %>> No
              </label>
            </div>
          </div>
          

        </div>
        <div class="mt-6">
            <button type="submit" class="btn btn-success">Update Form</button>
            <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete Form</a>
        </div>
      </form>
  </div>

 

  
  <br>

</body>

</html>
