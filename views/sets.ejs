<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css">
  
  </head>
  
  <body tabindex="-1">
  
    <%- include('partials/navbar', { page: '/lego/sets' }) %>

  
    <div class="container mx-auto p-4">

        <div class="hero bg-base-200 rounded-lg p-6">
          <div class="hero-content text-center">
            <div class="max-w-md">
              <h1 class="text-5xl font-bold">List</h1>
      
              <p class="py-6">Click to filter by payment type:
                <a href="/lego/sets?theme=Cash" class="btn btn-primary btn-xs">Cash</a>
                <a href="/lego/sets?theme=e-transfer" class="btn btn-primary btn-xs">e-transfer</a>
                <a href="/lego/sets?theme=check" class="btn btn-primary btn-xs">Check</a>
              </p>
      
            </div>
          </div>
        </div>
      
        <br>
        
      
        <table class="table">
            
            <tbody>
              <% sets.forEach(set => { %>
                <tr>
                    <td>
                        
                    </td>
                    <td><span class="font-bold">Name:</span> <%= set.name %> </td>
                    <td><span class="font-bold">Phone:</span> <%= set.phone %> 
                    <td><span class="font-bold">Paid:</span> <%= set.paid %> </td>
                    <td><a href="/lego/sets/<%= set.set_num %>" class="btn btn-xs">Details</a></td>
                </tr>
                
                
              <% }) %>
            </tbody>
          </table>
          
      
      </div>
      <br>
     
  <br>
  
  </body></html>